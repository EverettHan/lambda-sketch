  <!--======================================================-->
  <!-- CATCAfrList_ContainerApps : view of an list to display all Apps  -->
  <!--======================================================-->
  <Template syp:name="Default" Target="CATAfrVidCtlPanelApps" >


      <CATVidCtl syp:name="Content">
        <CATVidLayLayer>
          <!-- Background of band-->
          <CATVidGPSquare Name="BackgroundPickFlag" UseManipulatorFlag="1" PickFlag="1" BorderColor="179 181 185 255" Color="255 255 255 255"/>
          <!--Right Spacer-->
          <CATVidLayGrid GridWeight="col0=1">
            <CATVidSpacer CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RLTB"/>
            <CATVidCtlXRect syp:Template="SimpleHandle" Name="ResizeRight" LayoutWhenUnvisibleFlag="0" CursorShape="SizeHorCursor"  FocusableFlag="0" BackgroundColor="0 0" RequestedMinimumDimension="7 5"
                              CATVidLayGrid.IndexedConstraints="x=1 y=0  attach=RLTB" Drag="@OnPanelDrag" Press="@OnPanelDrag" Release="@OnPanelDrag"/>
          
            
          </CATVidLayGrid>
          <CATVidLayGrid GridWeight="row1=1 col1=1">
            <!--Top Left Spacer-->
            <CATVidSpacer RequestedMinimumDimension="10 10" CATVidLayGrid.IndexedConstraints="x=0 y=0"/>
           <!-- Right Spacer-->
            <CATVidSpacer RequestedMinimumDimension="5 1" CATVidLayGrid.IndexedConstraints="x=2 y=0 ySpan=2 attach=RLTB"/>
            <!--Main Content (Header + Scrollable)-->
            <CATVidLayGrid GridWeight="row1=1" CATVidLayGrid.IndexedConstraints="x=1 y=1 attach=RLTB">
              
            <!--Header: Close / Search Icon / Search Editor / Droppable Zone-->
              <CATVidLayGrid syp:name="TopGrid" GridWeight="col0=1" CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RLTB">
                <!--Close (2,0) -->
                <CATVidCtlButtonIcon syp:Template="Compact" syp:name="CloseButton" Name="ClosePanel" OnTexture="Compass/Close_Icon_Pressed.png" OverTexture="Compass/Close_Icon_Over.png"   OffTexture="Compass/Close_Icon_Normal.png"
                                       RequestedMinimumDimension="32 32" IconDimension="10 10" Click="@OnButtonClose" CATVidLayGrid.IndexedConstraints="x=2 y=0 xSpan=2 attach=RT"/>
                <!--Spacer When Big Compass (0,1) xSpan=3-->
                <CATVidSpacer syp:name="SpacerWhenBigCompass" LayoutWhenUnvisibleFlag="0" VisibleFlag="@TopSpacerVisibleFlag"
                                RequestedMinimumDimension="1 36" CATVidLayGrid.IndexedConstraints="x=0 y=1 xSpan=3 attach=RLTB"/>
                <!--Search Button (1,0) / Big Compass : (3,2)-->
                <CATVidCtlButtonIcon syp:name="FilterButton" ClickMode="0"  CheckMode="1" syp:Template="Compact" Name="SearchAppsButton" VisibilityPolicy="AlphaAnimation"   
                                     CATVidLayGrid.IndexedConstraints="x=1 y=0 attach=RB" LayoutWhenUnvisibleFlag="0"
                                          OnTexture="Compass/Search_Icon_Pressed.png" OverTexture="Compass/Search_Icon_Over.png"   OffTexture="Compass/Search_Icon_Normal" IconDimension="24 24" CheckState="@SearchVisibleFlag" Click="@OnButtonSearch" RequestedMinimumDimension="32 32" />
                 <!--Search Editor (0,0) xSpan=2 / Big Compass (0,3) xSpan=3-->
                <CATVidLayLayer syp:name="FilterEditorLayer" CATVidLayGrid.IndexedConstraints="x=0 y=0 xSpan=2  attach=RL" LayoutWhenUnvisibleFlag="0"  VisibleFlag="@HasEnoughApps" >
                  <CATVidCtlLineEditor syp:name="FilterEditor" LayoutWhenUnvisibleFlag="0" VisibilityPolicy="SlideRToLAnimation" VisibleFlag="@SearchVisibleFlag" PlaceholderText="@PlaceholderSearch"  SelectAllTextOnFocusFlag="0"  ResetButtonVisibleFlag="1"  />
                </CATVidLayLayer>
                <CATVidSpacer RequestedMinimumDimension="5 10" CATVidLayGrid.IndexedConstraints="x=3 y=2"/>
                <CATVidSpacer RequestedMinimumDimension="5 10" CATVidLayGrid.IndexedConstraints="x=4 y=2"/>
                <CATVidSpacer RequestedMinimumDimension="5 5" CATVidLayGrid.IndexedConstraints="x=0 y=3"/>
              <!--Drop Zone Replace Search (2,0) /Big Compass (3,2)-->
              <CATVidCtl syp:name="DropZone" LayoutWhenUnvisibleFlag="0" VisibilityPolicy="@DropZoneVisibilityPolicy" VisibleFlag="@FavoriteDropZoneFlag" 
                         CATVidLayGrid.IndexedConstraints="x=1 y=0 attach=RTB" RequestedMinimumDimension="200 30">
                    <CATVidLayLayer>
                      <CATVidGPSquare syp:name="DroppableZone" Name="DroppableZone" PickFlag="1" UseManipulatorFlag="1"/>
                      <CATVidLayLayer>
                        <CATVidGPNinePatchSquare syp:name="DropZoneNormal" Texture="Compass/DropZone_RemoveNormal.png" ScalableAreaBorder="5" />
                        <CATVidGPNinePatchSquare syp:name="DropZoneOver" VisibleFlag="@FavoriteDropZoneOverFlag"  Texture="Compass/DropZone_RemoveOver.png" ScalableAreaBorder="5"/>
                      </CATVidLayLayer>

                      <CATVidLayGrid GridWeight="col3=1">
                        <CATVidSpacer RequestedMinimumDimension="16 5" CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RLTB"/>
                        <CATVidGPSquare RequestedMinimumDimension="18 18" Texture="Compass/remove_icon.png"  CATVidLayGrid.IndexedConstraints="x=1 y=0"/>
                        <CATVidGPSquare RequestedMinimumDimension="18 18" Texture="Compass/remove_icon_over.png" VisibleFlag="@FavoriteDropZoneOverFlag"  CATVidLayGrid.IndexedConstraints="x=1 y=0"/>
                        <CATVidSpacer RequestedMinimumDimension="8 5" CATVidLayGrid.IndexedConstraints="x=2 y=0 attach=RLTB"/>
                        <CATVidGPLabel syp:name="DropText" Text="@FavoriteDropZoneTitle"  FontName="3ds"
                                       CropPolicy="NoCrop" TextColor="205 205 205 255"
                       
                                       FontSize="14"

                                           CATVidLayGrid.IndexedConstraints="x=3 y=0 attach=RL"/>
                        <CATVidSpacer RequestedMinimumDimension="16 5" CATVidLayGrid.IndexedConstraints="x=4 y=0 attach=RLTB"/>

                      </CATVidLayGrid>
                    </CATVidLayLayer>
                  </CATVidCtl>
                  
              </CATVidLayGrid>
            <!--Scrollable-->
             <CATVidLayLayer   CATVidLayGrid.IndexedConstraints="x=0 y=1 attach=RLTB ">

                  <CATVidCtlScrollableArea syp:name="Scrollable"  MouseScrollFlag="1" VSingleStep="112" VAutoscrollMargins="0"  HScrollbarPolicy="AlwaysHidden" HStretchPolicy="StretchFit"
                                           RequestedMinimumDimension="300 32"  >
                    <CATVidLayGrid  GridWeight="col1=1" >
                      <!--<CATVidSpacer RequestedMinimumDimension="10 0" CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RLTB"/>-->
                      <CATVidLayGrid GridWeight="row2=1" CATVidLayGrid.IndexedConstraints="x=1 y=0 attach=RLTB">

                        <CATVidLayStack syp:name="FixedSectionContainer" LayoutWhenUnvisibleFlag="0" StackAttachmentAppendPolicy="StretchAttachmentPolicy"  Orientation="Vertical" CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RLTB"/>
                        <CATVidLayLayer syp:name="GroupsCollection"
                                        CATVidLayGrid.IndexedConstraints="x=0 y=1 attach=RLTB"/>
                        <CATVidGPSquare CATVidLayGrid.IndexedConstraints="x=0 y=2 attach=RLTB"/>
                      </CATVidLayGrid>

                      <CATVidSpacer RequestedMinimumDimension="10 0" CATVidLayGrid.IndexedConstraints="x=2 y=0 attach=RLTB"/>
                    </CATVidLayGrid>

                  </CATVidCtlScrollableArea>
                  <CATVidLayGrid GridWeight="col1=1 row1=1"  LayoutWhenUnvisibleFlag="0" >
                    <!--<CATVidSpacer RequestedMinimumDimension="10 0" CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RLTB"/>-->
                    <!--<CATVidLayStack syp:name="HeadersCollection" Orientation="Vertical" StackAttachmentAppendPolicy="StretchAttachmentPolicy" CATVidLayGrid.IndexedConstraints="x=1 y=0 attach=RLTB" />-->
                    <CATVidLayGrid Name="HeadersCollection" syp:name="HeadersCollection" Color="255 255 255 230" GridAppendPolicy="GridRowAppend" CATVidLayGrid.IndexedConstraints="x=1 y=0 attach=RL"/>
                    <CATVidSpacer RequestedMinimumDimension="18 0" CATVidLayGrid.IndexedConstraints="x=2 y=0 attach=RLTB"/>
                    <!--<CATVidSpacer RequestedMinimumDimension="23 0" CATVidLayGrid.IndexedConstraints="x=2 y=0 attach=RLTB"/>-->
                    <CATVidSpacer  CATVidLayGrid.IndexedConstraints="x=0 y=1 xSpan=2 attach=RLTB"/>
                  </CATVidLayGrid>

                </CATVidLayLayer>
            </CATVidLayGrid>
           
          </CATVidLayGrid>
          <!--Background Loading-->
         <CATVidLayGrid GridWeight="row0=1">
              <CATVidGPSquare Color="255 255 255 0" Name="BackgroundLoading" syp:name="BackgroundLoading" UseManipulatorFlag="0"  CATVidLayGrid.IndexedConstraints="x=0 y=0  attach=RLTB"/>
              <CATVidLayGrid Color="120 122 125 255" RequestedMinimumDimension="1 46" LayoutWhenUnvisibleFlag="0" GridWeight="col0=1" VisibleFlag="@InformationVisibleFlag" CATVidLayGrid.IndexedConstraints="x=0 y=1 attach=RLTB">
                <CATVidLayGrid GridWeight="col0=1" CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RLTB">
                  <CATVidGPText Text="@Information"  FontFamily="3ds"
                         Alignment="AlignCenter"
                          Color="255 255 255 255"
                          FontHeight="16"
                        WordWrapFlag="1"
                          WordWrapPolicy="Auto"
                              CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RL"

                             />
                  <!--<CATVidGPLabel syp:name="LoadingText"  FontName="3ds" CropPolicy="NoCrop" TextColor="255 255 255 255" Text="@Information" CATVidLayGrid.IndexedConstraints="x=0 y=0 attach=RL" />-->
                  <CATVidSpacer RequestedMinimumDimension="5 0" CATVidLayGrid.IndexedConstraints="x=1 y=0 attach=RLTB"/>
                  <CATVidGPSquare syp:name="LoadingImage" Texture="I_Loading_Wheel_24x24.mng" LayoutWhenUnvisibleFlag="0" VisibleFlag="@LoadingVisibleFlag" AnimationOnFlag="@LoadingVisibleFlag" RequestedMinimumDimension="24 24" CATVidLayGrid.IndexedConstraints="x=2 y=0 attach=L"/>
                  <CATVidSpacer RequestedMinimumDimension="15 0" LayoutWhenUnvisibleFlag="0" VisibleFlag="@LoadingVisibleFlag" CATVidLayGrid.IndexedConstraints="x=3 y=0 attach=RLTB"/>
                </CATVidLayGrid>

              </CATVidLayGrid>


            </CATVidLayGrid>
        </CATVidLayLayer>
      </CATVidCtl>
    
<CATSYPTriggerCollection>
      <CATSYPTrigger Property="CheckState" TargetName="FilterButton" Value="0">
        <CATSYPSetter Property="Text" TargetName="FilterEditor" Value=""/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="VisibleFlag" Value="0">
        <CATSYPSetter Property="Text" TargetName="FilterEditor" Value=""/>
        <CATSYPSetter Property="CheckState" TargetName="FilterButton" Value="0"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="LoadingVisibleFlag" Value="0">
        <CATSYPSetter Property="Color" TargetName="BackgroundLoading" Value="0 0"/>
        <CATSYPSetter Property="UseManipulatorFlag" TargetName="BackgroundLoading" Value="0"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="LoadingVisibleFlag" Value="1">
        <CATSYPSetter Property="Color" TargetName="BackgroundLoading" Value="255 255 255 230"/>
        <CATSYPSetter Property="UseManipulatorFlag" TargetName="BackgroundLoading" Value="1"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="TopSpacerVisibleFlag" Value="1">
        <CATSYPSetter IndexName="FilterButton"   Property="IndexedConstraints" TargetName="TopGrid" Value="x=2 y=2 attach=RB"/>
        <CATSYPSetter IndexName="FilterEditorLayer"   Property="IndexedConstraints" TargetName="TopGrid" Value="x=0 y=2 xSpan=2  attach=RL"/>
        <CATSYPSetter IndexName="DropZone"   Property="IndexedConstraints" TargetName="TopGrid" Value="x=1 y=0 attach=RTB"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="TopSpacerVisibleFlag" Value="0">
        <CATSYPSetter IndexName="FilterButton"   Property="IndexedConstraints" TargetName="TopGrid" Value="x=1 y=0 attach=RB"/>
        <CATSYPSetter IndexName="FilterEditorLayer"   Property="IndexedConstraints" TargetName="TopGrid" Value="x=0 y=0   attach=RL"/>
        <CATSYPSetter IndexName="DropZone"   Property="IndexedConstraints" TargetName="TopGrid" Value="x=1 y=0 attach=RTB"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="FavoriteDropZoneOverFlag" Value="0">
        <CATSYPSetter Property="TextColor" TargetName="DropText" Value="205 205 205 255"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="FavoriteDropZoneOverFlag" Value="1">
        <CATSYPSetter Property="TextColor" TargetName="DropText" Value="255 0 0 255"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="FavoriteDropZoneFlag" Value="0">
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterButton" Value="1"/>
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterEditorLayer" Value="1"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="FavoriteDropZoneFlag" Value="1">
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterButton" Value="0"/>
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterEditorLayer" Value="0"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="HasEnoughApps" Value="1">
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterButton" Value="1"/>
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterEditorLayer" Value="1"/>
      </CATSYPTrigger>
      <CATSYPTrigger Property="HasEnoughApps" Value="0">
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterButton" Value="0"/>
        <CATSYPSetter Property="VisibleFlag" TargetName="FilterEditorLayer" Value="0"/>
      </CATSYPTrigger>
    </CATSYPTriggerCollection>
  </Template>
  
  
