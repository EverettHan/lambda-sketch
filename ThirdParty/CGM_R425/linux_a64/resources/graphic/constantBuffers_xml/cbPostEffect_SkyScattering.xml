<?xml version="1.0" encoding="utf-8"?>
<CONSTANT_BUFFER xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns ="urn:dsfx0"
        >
  <NAME>cb_SkyScattering</NAME>

  <UNIFORM>
    <NAME>u_AtmosphereHeight</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>100</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_SunScatteringIntensity</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>15.0</DEFAULT_VALUE>
  </UNIFORM>

  <!-- Mie -->
  
  <UNIFORM>
    <NAME>u_HM</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>1.2</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_BetaM</NAME>
    <TYPE>float3</TYPE>
    <DEFAULT_VALUE>4e-3 4e-3 4e-3</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_MieG</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.8</DEFAULT_VALUE>
  </UNIFORM>

  <!-- Rayleigh -->
  
  <UNIFORM>
    <NAME>u_HR</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>8.0</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_BetaR</NAME>
    <TYPE>float3</TYPE>
    <DEFAULT_VALUE>4e-3 4e-3 4e-3</DEFAULT_VALUE>
  </UNIFORM>


  <!-- Ground -->
  
  <UNIFORM>
    <NAME>u_AverageGroundReflectance</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.1</DEFAULT_VALUE>
  </UNIFORM>

  <!-- Night Haze -->
  
  <UNIFORM>
    <NAME>u_NightHazeStartAltitude</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_NightHazeEndAltitude</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>100</DEFAULT_VALUE>
  </UNIFORM>
  
  <UNIFORM>
    <NAME>u_NightHazeColor</NAME>
    <TYPE>float3</TYPE>
    <DEFAULT_VALUE>0.54 0.62 0.73</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_NightHazeSkyIntensity</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.26</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_NightHazeSkyPower</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.8</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_NightHazeFogIntensity</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.23</DEFAULT_VALUE>
  </UNIFORM> 

</CONSTANT_BUFFER>
