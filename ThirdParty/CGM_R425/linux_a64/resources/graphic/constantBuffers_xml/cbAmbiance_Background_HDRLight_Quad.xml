<?xml version="1.0" encoding="utf-8"?>
<CONSTANT_BUFFER xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns ="urn:dsfx0"
        >
  <NAME>cb_BgQuad</NAME>

  <UNIFORM>
    <NAME>u_Intensity</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>1.0</DEFAULT_VALUE>
    <UI_MIN_VALUE>0</UI_MIN_VALUE>
    <UI_MAX_VALUE>1000000</UI_MAX_VALUE>
    <UI_STEP_VALUE>-1</UI_STEP_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_Color</NAME>
    <TYPE>float3</TYPE>
    <DEFAULT_VALUE>1.0 1.0 1.0</DEFAULT_VALUE>
    <SECONDARY_TYPE>color</SECONDARY_TYPE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_Thickness</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.1</DEFAULT_VALUE>
    <UI_MIN_VALUE>0</UI_MIN_VALUE>
    <UI_MAX_VALUE>1</UI_MAX_VALUE>
    <UI_STEP_VALUE>0.001</UI_STEP_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_ThicknessBlur</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.15</DEFAULT_VALUE>
    <UI_MIN_VALUE>0</UI_MIN_VALUE>
    <UI_MAX_VALUE>1</UI_MAX_VALUE>
    <UI_STEP_VALUE>0.001</UI_STEP_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_Length</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.95</DEFAULT_VALUE>
    <UI_MIN_VALUE>0</UI_MIN_VALUE>
    <UI_MAX_VALUE>1</UI_MAX_VALUE>
    <UI_STEP_VALUE>0.001</UI_STEP_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_LengthBlur</NAME>
    <TYPE>float</TYPE>
    <DEFAULT_VALUE>0.15</DEFAULT_VALUE>
    <UI_MIN_VALUE>0</UI_MIN_VALUE>
    <UI_MAX_VALUE>1</UI_MAX_VALUE>
    <UI_STEP_VALUE>0.001</UI_STEP_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_ZenithDirection</NAME>
    <TYPE>float3</TYPE>
    <DEFAULT_VALUE>0 1.0 0</DEFAULT_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>u_QuadDirection</NAME>
    <TYPE>float3</TYPE>
    <DEFAULT_VALUE>0 0 1.0</DEFAULT_VALUE>
  </UNIFORM>

</CONSTANT_BUFFER>
