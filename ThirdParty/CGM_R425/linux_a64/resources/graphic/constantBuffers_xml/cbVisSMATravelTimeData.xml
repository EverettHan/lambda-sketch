<?xml version="1.0" encoding="utf-8"?>
<CONSTANT_BUFFER xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns ="urn:dsfx0"
        >
  <NAME>cb_cbSMATravelTime</NAME>

  <UNIFORM>
    <NAME>TravelTimePos</NAME>
    <TYPE>float</TYPE> <!--Negative indicates to ignore Travel Time settings-->
    <DEFAULT_VALUE>-1.0</DEFAULT_VALUE>
    <UI_MIN_VALUE>-1.0</UI_MIN_VALUE>
  </UNIFORM>

  <UNIFORM>
    <NAME>StreamAnimStyle</NAME>
    <TYPE>float</TYPE> <!--Negative indicates to ignore Travel Time settings-->
    <DEFAULT_VALUE>1.0</DEFAULT_VALUE>
    <UI_MIN_VALUE>0.0</UI_MIN_VALUE> <!--Dashed lines (using TravelTimeParam)-->
    <UI_MAX_VALUE>1.0</UI_MAX_VALUE> <!--Growing line-->
  </UNIFORM>

  <UNIFORM>
    <NAME>TravelTimeParam</NAME>
    <TYPE>float2</TYPE> <!-->Dash+Gap length then Gap length in time units<-->
  </UNIFORM>
  
  <UNIFORM>
    <NAME>TravelTimeClip</NAME>
    <TYPE>float3</TYPE> <!-->Start Pos, End Pos(negative=end), Units: 0=OFF and 1=X 2=Y 3=Z and 4=Time<-->
  </UNIFORM>

</CONSTANT_BUFFER>

