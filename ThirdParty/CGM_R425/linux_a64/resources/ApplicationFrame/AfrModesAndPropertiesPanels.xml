<?xml version="1.0"?>
<Styles xmlns:syp="http://www.3ds.com/xsd/SYP">

  <Template syp:name="AfrAppModePanel" Name="AfrAppModePanelComponent" Target="CATAfrComponent">
    <CATCAfrWindow Name               = "AfrAppModePanel_Window"
                   Title              = "App Options"
                   ResizableFlag      = "1"
                   Visibility         = "1"
                   HorizontallyStretchableFlag="1"
                   VerticallyStretchableFlag="1"
                   RepresentationType = "AfrVIDFraPanel">
      <CATCAfrTree Name="AfrAppModePanel_Tree"
                   Display="App Options"
                   Tooltip="App Options"
                   Visibility ="1"
                   RepresentationType="CAfrComponent"
                   SelectionMode="MultiRange"
                   RegisterFlag="1"
                   DragFlag="0" DropFlag="0"
                   RootDecorationFlag="1"
                   DropLocations="AfrDnDDropAfter|AfrDnDDropBefore"
                   PreSelectionColorFlag="0"
                   MinimumDimension ="1 60"
				   HUnitScrollPixelsValue="50"
				   VUnitScrollPixelsValue="50"
				   DynamicCellsSizeFlag="1">
      </CATCAfrTree>
    </CATCAfrWindow>
  </Template>

